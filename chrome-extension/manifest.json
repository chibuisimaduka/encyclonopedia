{
    "manifest_version": 2,

    "name": "Encyclonospace Iranica",
    "description": "Saturday afternoon with Sepand And Mo",
    "version": "1.0",

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "http://*/"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

    "browser_action": {
        "default_icon": {
            "19": "img/icon19.png",
            "38": "img/icon38.png"
        },
        "default_popup": "popup.html"
    }
}